<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">#616161</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
        <item name="android:background">#FAFAFA</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="colorPrimary">@color/black</item>
    </style>
    <style name="DialogTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>
    <style name="TextAppearance.AppCompat.Subhead" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="lineHeight">@dimen/_22ssp</item>
        <item name="android:textColor">#000000</item> <!-- we can change other parameters, e.g. textColor -->
    </style>
    <style name="LandingCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
    </style>
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>
</resources>