<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/welcome_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_32sdp"

            android:fontFamily="sans-serif-medium"
            android:text="@string/welcome_title"

            android:textColor="#9E9E9E"
            android:textSize="@dimen/_12ssp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/welcome_content"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_2sdp"

            android:fontFamily="sans-serif-black"
            android:text="@string/welcome_content"

            android:textColor="#000000"
            android:textSize="@dimen/_13ssp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome_title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/profilePicture"

            android:layout_width="@dimen/_36sdp"

            android:layout_height="@dimen/_36sdp"
            android:layout_marginEnd="@dimen/_28sdp"
            app:cardCornerRadius="@dimen/_36sdp"

            app:layout_constraintBottom_toBottomOf="@id/welcome_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/welcome_title">

            <ImageView
                android:id="@+id/ProfileImage"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/avatar" />
        </androidx.cardview.widget.CardView>

        <android.widget.SearchView
            android:id="@+id/searchView"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_26sdp"


            android:background="@drawable/searchbarshape"
            android:iconifiedByDefault="false"
            android:inputType="text"
            android:queryHint="Search place or food..."
            android:searchIcon="@drawable/search_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome_content"

            app:queryBackground="@null"
            app:submitBackground="@null" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/category_btn"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchView">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/near_by_btn"

                android:layout_width="wrap_content"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/btn"
                android:backgroundTint="@null"
                android:drawableStart="@drawable/ic_location"
                android:paddingStart="@dimen/_10sdp"

                android:paddingEnd="@dimen/_10sdp"
                android:text=" Near you"
                android:textStyle="normal"
                android:textColor="#616161"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/travel_btn"

                android:layout_width="wrap_content"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/btn"
                android:backgroundTint="@null"
                android:layout_marginStart="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"

                android:paddingEnd="@dimen/_10sdp"
                android:text="Travel"
                android:textColor="#616161"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toEndOf="@id/near_by_btn"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/food_btn"

                android:layout_width="wrap_content"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/btn"
                android:backgroundTint="@null"
                android:layout_marginStart="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"

                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/food"
                android:textColor="#616161"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toEndOf="@id/travel_btn"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:paddingBottom="@dimen/_80sdp"
            android:id="@+id/Section"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_btn"
            tools:listitem="@layout/section" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>